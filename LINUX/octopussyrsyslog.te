
module octopussyrsyslog 1.0;

require {
	type syslogd_t;
	type httpd_t;
	type var_spool_t;
	class dir { search getattr };
	class fifo_file { read write ioctl };
}

#============= httpd_t ==============
allow httpd_t syslogd_t:dir getattr;

#============= syslogd_t ==============
allow syslogd_t var_spool_t:dir search;
allow syslogd_t var_spool_t:fifo_file { read write ioctl };
